commands:
  01_setup_swap:
    command: |
      if [ ! -f /var/swapfile ]; then
        dd if=/dev/zero of=/var/swapfile bs=1M count=2048
        chmod 600 /var/swapfile
        mkswap /var/swapfile
        swapon /var/swapfile
        echo "/var/swapfile none swap sw 0 0" >> /etc/fstab
      fi
    test: '[ ! -f /var/swapfile ]'