files:
  "/etc/cron.d/my_cron_job":
    mode: "000644"
    owner: root
    group: root
    content: |
      # 머니백 테스트를 위해 23:00 KST (14:00 UTC) 실행 설정 예시
      10 14 * * * root . /opt/elasticbeanstalk/deployment/env && cd /var/app/current && /var/app/venv/*/bin/python -m moneybag.src.pipelines.daily_runner >> /var/log/web.stdout.log 2>&1
      
      # (마지막 빈 줄 필수!)
      
commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/my_cron_job.bak"