files:
  "/etc/cron.d/my_cron_job":
    mode: "000644"
    owner: root
    group: root
    content: |
      # KST 20:25 (UTC 11:25)에 실행하도록 재설정
      25 11 * * * root set -a; . /opt/elasticbeanstalk/deployment/env; set +a; cd /var/app/current && /var/app/venv/*/bin/python3.14 -m iceage.src.pipelines.daily_collector >> /var/log/web.stdout.log 2>&1
      
      # 이 줄 뒤에 반드시 빈 줄(엔터)이 있어야 합니다.
      
commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/my_cron_job.bak"