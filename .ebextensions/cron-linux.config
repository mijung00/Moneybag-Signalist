files:
  "/etc/cron.d/my_cron_job":
    mode: "000644"
    owner: root
    group: root
    content: |
      # ---------------------------------------------------------
      # [Iceage] 주식 정보 & 시그널리스트
      # ---------------------------------------------------------
      # 1. 시그널리스트 모닝 브리핑 (매일 아침 07:00 KST)
      # UTC: 전날 22:00
      35 00 * * * root bash /var/app/current/run_iceage.sh

      # 2. KRX 데이터 3종 3일치 수집 (매일 밤 22:00 KST)
      # UTC: 당일 13:00 (순차 실행 스크립트 연결)
      00 13 * * * root bash /var/app/current/run_krx_batch.sh

      # ---------------------------------------------------------
      # [Moneybag] 코인 리포트
      # ---------------------------------------------------------
      # 3. 머니백 모닝 리포트 (매일 아침 07:30 KST)
      # UTC: 전날 22:30
      30 22 * * * root bash /var/app/current/run_moneybag.sh morning

      # 4. 머니백 나이트 리포트 (매일 저녁 20:00 KST)
      # UTC: 당일 11:00
      00 11 * * * root bash /var/app/current/run_moneybag.sh night

      # (마지막 빈 줄 필수 - 지우지 마세요)

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/my_cron_job.bak"