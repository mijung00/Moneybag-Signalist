files:
  "/etc/cron.d/my_cron_job":
    mode: "000644"
    owner: root
    group: root
    content: |
      SHELL=/bin/bash
      PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

      # ---------------------------------------------------------
      # [Iceage] 주식 정보 & 시그널리스트
      # ---------------------------------------------------------
      # [테스트] 모든 스케줄을 비활성화하고, 머니백 모닝 리포트만 테스트합니다.

      # ---------------------------------------------------------
      # [Moneybag] 코인 리포트
      # ---------------------------------------------------------
      # 3. 머니백 모닝 리포트 (테스트: 매일 오전 11:00 KST)
      # KST 11:00 = UTC 02:00 (당일)
      00 02 * * * root bash -lc 'echo "[START moneybag_morning] $(date -Is)"; set -a; . /opt/elasticbeanstalk/deployment/env; set +a; bash /var/app/current/run_moneybag.sh morning; rc=$?; echo "[END moneybag_morning] $(date -Is) rc=$rc"; exit $rc' >> /var/log/moneybag_morning.log 2>&1

      # (마지막 빈 줄 필수 - 지우지 마세요)

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/my_cron_job.bak"
