commands:
  01_enable_epel:
    # 이미 설치되어 있어도 에러를 무시하고 진행
    command: "sudo amazon-linux-extras install epel -y || true"
  02_install_dependencies:
    # 커뮤니티에서 공통적으로 언급되는 크롬 실행 필수 라이브러리(libgbm 등 포함)
    command: |
      sudo yum install -y libX11 libXcomposite libXcursor libXdamage libXext libXi libXtst \
      cups-libs libXScrnSaver libXrandr alsa-lib atk at-spi2-atk gtk3 ipa-gothic-fonts \
      xorg-x11-fonts-100dpi xorg-x11-fonts-75dpi xorg-x11-utils xorg-x11-fonts-cyrillic \
      xorg-x11-fonts-Type1 xorg-x11-font-utils libgbm || true
  03_install_chromium:
    command: "sudo yum install -y chromium || true"
  04_create_symlink:
    # html2image가 'chromium'이라는 이름으로 찾을 수 있게 링크 생성
    command: "ln -sf /usr/bin/chromium-browser /usr/bin/chromium || true"