files:
  "/etc/cron.d/newsletter_cron":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Run the newsletter script every day at 8:05 AM KST (23:05 UTC)
      05 23 * * * root . /opt/elasticbeanstalk/bin/get-config environment; cd /var/app/current && /usr/bin/python3 iceage/src/pipelines/morning_newsletter.py >> /var/log/newsletter_cron.log 2>&1

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/newsletter_cron.bak"